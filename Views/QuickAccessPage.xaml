<Page
    x:Class="favoshelf.Views.QuickAccessPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:favoshelf.Views"
    xmlns:ctl="using:favoshelf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <CommandBar x:Name="topbar" VerticalAlignment="Top" HorizontalContentAlignment="Stretch">
            <AppBarButton Icon="Delete" Label="履歴全削除"/>
            <CommandBar.Content>
                <ctl:PageHeader>
                    <ctl:PageHeader.HeaderContent>
                        <TextBlock Text="クイックアクセス" Style="{ThemeResource PageTitleTextBlockStyle}" TextWrapping="NoWrap"/>
                    </ctl:PageHeader.HeaderContent>
                </ctl:PageHeader>
            </CommandBar.Content>
        </CommandBar>

        <Grid Grid.Row="1" EntranceNavigationTransitionInfo.IsTargetElement="True" PointerReleased="Grid_PointerReleased">
            <GridView  x:Name="gridView"
                       ItemsSource="{Binding Path=ItemList}" 
                       Margin="8" 
                       IsItemClickEnabled="True"
                       ContainerContentChanging="gridView_ContainerContentChanging"
                       ItemClick="gridView_ItemClick">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="{Binding BackgroundColor, Mode=OneWay}">
                            <Image Source="{Binding PreviewImage}" 
                                   Width="{Binding ThumWidth}" 
                                   Height="{Binding ThumHeight}"/>
                            <TextBlock Text="{Binding Name}" 
                                       Style="{StaticResource BaseTextBlockStyle}" 
                                       Width="{Binding ThumWidth}"
                                       Height="50"
                                       Margin="8,2,0,0"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

    </Grid>
</Page>
